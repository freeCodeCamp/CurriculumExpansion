{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "newLine": "LF",
    "target": "es5",
    "sourceMap": true,
    "lib": [
      "dom",
      "es5",
      "es6",
      "es2016",
      "es2017.object"
    ],
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
